{
    "name": "joshembling/laragenie",
    "description": "An AI bot you run on the command line that can read and understand your Laravel codebase.",
    "keywords": [
        "Josh Embling",
        "laravel",
        "laragenie",
        "ai",
        "openai",
        "laravel prompts",
        "pinecone",
        "vector",
        "php code bot"
    ],
    "homepage": "https://github.com/joshembling/laragenie",
    "license": "MIT",
    "authors": [
        {
            "name": "Josh Embling",
            "email": "joshembling@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "illuminate/contracts": "^10.0",
        "laravel/prompts": "^0.1.13",
        "openai-php/client": "^0.8.0",
        "probots-io/pinecone-php": "^0.0.3",
        "spatie/laravel-package-tools": "^1.14.0"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "nunomaduro/collision": "^7.8",
        "orchestra/testbench": "^8.8",
        "pestphp/pest": "^2.20",
        "pestphp/pest-plugin-arch": "^2.0",
        "pestphp/pest-plugin-laravel": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "JoshEmbling\\Laragenie\\": "src/",
            "JoshEmbling\\Laragenie\\Database\\Factories\\": "database/factories/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "JoshEmbling\\Laragenie\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@composer run prepare",
        "clear": "@php vendor/bin/testbench package:purge-laragenie --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": [
            "@composer run prepare",
            "@php vendor/bin/testbench workbench:build --ansi"
        ],
        "start": [
            "Composer\\Config::disableProcessTimeout",
            "@composer run build",
            "@php vendor/bin/testbench serve"
        ],
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true,
            "php-http/discovery": false
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "JoshEmbling\\Laragenie\\LaragenieServiceProvider"
            ],
            "aliases": {
                "Laragenie": "JoshEmbling\\Laragenie\\Facades\\Laragenie"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
